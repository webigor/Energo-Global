@model EnergoGlobalKalkulator.Models.Projekat

@{
    ViewBag.Title = "Kreiraj_Projekat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="wrapper style5">
    <div class="inner">
        <section>

           
            <h4><i id="profil" class="fa fa-plus" aria-hidden="true"></i>Kreiranje novog projekta:</h4>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "Morate uneti naziv projekta")
                <div class="row gtr-uniform">
                    <div class="col-4 col-12-xsmall">

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Naziv_projekta)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Naziv_projekta)
                            @Html.ValidationMessageFor(model => model.Naziv_projekta)
                        </div>
                    </div>

                </div>
                
                @Html.HiddenFor(x => x.Datum_izrade);
                @Html.HiddenFor(x => x.IdProjektant);
                @Html.HiddenFor(x => x.Ime_projektanta);
                
                
                 <div class="row gtr-uniform">

                <section>
                    <ul class="actions fit small">
                        <li><input class="button primary fit small" value="Kreiraj projekat" type="submit" /></li>

                        <li> <a href="/Projektant/Profil/@Model.IdProjektant" class=" button fit small">Nazad na profil</a></li> 
                        
                       
                    </ul>
                </section>

            </div>

                
            }


           

        </section>


    </div>
</section>






   
      
  
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
