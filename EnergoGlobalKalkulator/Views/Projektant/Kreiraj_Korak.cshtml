                             </div>
                          </div>

                         </div>


                <div class="row gtr-uniform">
                        <div class="col-4 col-12-xsmall">

                            <div class="editor-label">
                                @Html.LabelFor(model => model.URadu_P_F)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.URadu_P_F)
                                @Html.ValidationMessageFor(model => model.URadu_P_F)
                            </div>
                        </div>

                        </div>


                 <div class="row gtr-uniform">
                         <div class="col-4 col-12-xsmall">
                             <div class="editor-label">
                                 @Html.LabelFor(model => model.Faktor)
                             </div>
                             <div class="editor-field">
                                 @Html.EditorFor(model => model.Faktor)
