                                @Html.LabelFor(model => model.IdStartMotora)
                            </div>
                            <div class="editor-field">
                                @Html.DropDownList("IdStartMotora", ViewBag.StartMotora as SelectList)
                                @Html.ValidationMessageFor(model => model.IdStartMotora)
                            </div>

                        </div>


                    </div>




                // Samo ako je motor



                <section>

                        <ul class="actions fit small">
                            <li><input type="submit" class="button primary fit small" value="Sledeći korak" /></li>
                            <li><a href="/Projektant/Projekat/@Model.IdProjekat" class="button fit small">Završi projekat</a></li>
                    

                        </ul>

                 </section>


                <div class="row gtr-uniform">



                     </div>





            }

              </section>

           </div>

     </section>


    <script type="text/javascript">



       


    function leaveChange() {

        if (document.getElementById("IdTipPotrosaca").value == "2") {
            document.getElementById("IdStartMotora").style.visibility = "visible";
            document.getElementById("sakrijMotor").style.visibility = "Visible";
        }


        if(document.getElementById("IdTipPotrosaca").value == "1")

        {
            document.getElementById("sakrijMotor").style.visibility = "hidden";
            document.getElementById("IdStartMotora").style.visibility = "hidden";

        }

    }

</script>



